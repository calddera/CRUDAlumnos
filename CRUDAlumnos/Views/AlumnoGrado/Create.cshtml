@model CRUDAlumnos.Models.ViewModels.AlumnoGrado.AlumnoGradoViewModel

@{
    ViewBag.Title = "Nuevo Matriculado";
}

<h2>Nuevo Matriculado</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.AlumnoId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="AlumnoId" name="AlumnoId" class="form-control">
                @foreach (var i in Model.lstAlumnos)
                {
                    <option value="@i.Id">@i.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GradoId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="GradoId" name="GradoId" class="form-control">
                @foreach (var i in Model.lstGrados)
                {
                    <option value="@i.Id">@i.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SeccionId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select id="SeccionId" name="SeccionId" class="form-control">
                @foreach (var i in Model.lstSecciones)
                {
                    <option value="@i.Id">@i.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
