@model IEnumerable<CRUDAlumnos.Models.ViewModels.Alumnos.ListaAlumnosViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Alumnos</h2>

<p>
    @Html.ActionLink("Nuevo Alumno", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GeneroName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    var fechaNac = item.Birthday.ToString("dd/MM/yyyy");

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => fechaNac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GeneroName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
